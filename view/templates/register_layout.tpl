<div class="row">
    <form class="col s12">
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix teal-text">perm_identity</i>
                <input placeholder="María" id="first_name" type="text" class="validate">
                <label for="first_name">Nombre(s)</label>
            </div>
            <div class="input-field col s6">
                <input placeholder="Perez" id="last_name" type="text" class="validate">
                <label for="last_name">Apellido(s)</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix teal-text">mode_edit</i>
                <input id="password" type="password" class="validate">
                <label for="password">Contraseña</label>
            </div>
            <div class="input-field col s6">
                <input id="password_ver" type="password" class="validate">
                <label for="password_ver">Repita Contraseña</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons prefix teal-text">email</i>
                <input id="email" type="email" class="validate">
                <label for="email">Email</label>
            </div>
        </div>
    </form>
</div>